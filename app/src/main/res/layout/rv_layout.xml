<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/record"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_height="wrap_content">

            <TextView android:id="@+id/rv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView android:id="@+id/rv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView android:id="@+id/rv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView android:id="@+id/rv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"/>

            <TextView android:id="@+id/rv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView android:id="@+id/rv_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView android:id="@+id/rv_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"/>

            <TextView android:id="@+id/rv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />
    </GridLayout>

    <TextView
        android:id="@+id/rv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"/>
</LinearLayout>