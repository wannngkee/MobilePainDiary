<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="*Pain Intensity Level" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Low" />

        <com.google.android.material.slider.Slider
            android:id="@+id/level"
            android:layout_width="190dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:valueFrom="0"
            android:valueTo="10"
            android:value="0"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="High" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Location of Pain"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/location"
        android:layout_width="160dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Mood"
        android:layout_marginTop="8dp"
        android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/mood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/very_low"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_sad"
                android:button="@android:color/transparent" />
            <RadioButton
                android:id="@+id/low"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:button="@android:color/transparent"
                android:background="@drawable/selector_low" />
            <RadioButton
                android:id="@+id/average"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:button="@android:color/transparent"
                android:background="@drawable/selector_neutral" />

            <RadioButton
                android:id="@+id/good"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_good"
                android:button="@android:color/transparent" />
            <RadioButton
                android:id="@+id/very_good"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:button="@android:color/transparent"
                android:background="@drawable/selector_happy" />
        </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="Very Low     Low      Average     Good     Very Good" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Walking Step Goal"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/step_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:text="10000"
        android:theme="@style/MyRadioButton"
        android:inputType="numberSigned" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="*Steps For Today"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/current_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:theme="@style/MyRadioButton"
        android:inputType="numberSigned" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/edit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Edit"/>
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="save"/>
    </LinearLayout>
</LinearLayout>